@model BasketballTickets.Models.ViewModels.TeamViewModel

@{
    ViewData["Title"] = "CreateTeam";
}

<h2>Create a new team</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTeam" method="post" enctype="multipart/form-data" asp-controller="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoPath" class="control-label"></label>
                <input type="file" name="file" asp-for="LogoPath" />
                <span asp-validation-for="LogoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@if ((bool)TempData["showSuccessfulMsgStrip"])
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
